@model FBClone.Models.User

<link href="~/Content/Style/LoginReg.css" rel="stylesheet" />

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="RegisterFormContent container p-5">
        <div class="row">
            <p class="darkTxt">Create Your First Account!</p>
        </div>
        <div class="row my-2">
            <span class="col-6">
                @Html.EditorFor(model => model.FName, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "First Name" } })
            </span>
            <span class="col-6">
                @Html.EditorFor(model => model.LName, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "Last Name" } })
            </span>
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.FName, "", new { @class = "text-danger" })
            @Html.ValidationMessageFor(model => model.LName, "", new { @class = "text-danger" })
        </div>
        <div class="row my-2">
            <span class="col-6">
                @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "Email Address" } })
            </span>
            <span class="col-6">
                @Html.EditorFor(model => model.Password, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "Password" } })
            </span>
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger col-6" })
            @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger col-6" })
        </div>
        <div class="row my-2">
            <span class="col-3">
                @Html.EditorFor(model => model.City, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "City" } })
            </span>
            <span class="col-3">
                @Html.EditorFor(model => model.Country, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "Country" } })
            </span>
            <span class="col-6">
                @Html.EditorFor(model => model.Mobile, new { htmlAttributes = new { @class = "lightInput regInput", @placeholder = "Mobile Number" } })
            </span>
        </div>
        <div class="row">
            @Html.ValidationMessageFor(model => model.City, "", new { @class = "text-danger col-3" })
            @Html.ValidationMessageFor(model => model.Country, "", new { @class = "text-danger col-3" })
            @Html.ValidationMessageFor(model => model.Mobile, "", new { @class = "text-danger col-6" })
        </div>
        <div class="row mt-3 justify-content-end">
            <button type="submit" class="btn darkBtn float-right col-6">
                Create Account
                <span class="material-symbols-outlined" style="vertical-align:-30%;">
                    chevron_right
                </span>
            </button>
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
