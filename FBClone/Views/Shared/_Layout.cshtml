<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Deathnote</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Styles.Render("~/Content/global.css")
    <!-- CSS only -->
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container d-inline">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @if (Session["UserId"] == null)
                {
                    @Html.ActionLink("Deathnote", "Login", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }
                else
                {
                    @Html.ActionLink("Deathnote", "Home", "Account", new { area = "" }, new { @class = "navbar-brand" })
                }

            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav d-inline">
                    @if (Session["UserId"] == null)
                    {
                        <li>@Html.ActionLink("Login", "Login", "Account")</li>
                        <li>@Html.ActionLink("Register", "SignUp", "Account")</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Home", "Home", "Account")</li>
                        <li>@Html.ActionLink("List Accounts", "List", "Account")</li>
                        <li>@Html.ActionLink("Search", "Search", "Account")</li>
                        <li>@Html.ActionLink("Post", "Post", "Account")</li>
                        <li>@Html.ActionLink("Show Posts", "ShowPosts", "Account")</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container-fluid">
        @RenderBody()
        <footer>
            <p>&copy; @DateTime.Now.Year - DeathNote</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
    <!-- JavaScript Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
</body>
</html>
