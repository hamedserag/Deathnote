@model FBClone.Models.Post

<div class="container">
    <div class="row post px-5 py-3 mt-3">

        <div class="row justify-content-around py-4 px-2 postContent">
            <div class="col-1">
                <img class="smallImg" src="~/UsersMedia/ProfilePictures/@ViewBag.uimg" alt="Alternate Text" />
            </div>
            <div class="col-9 d-flex align-items-center">
                <div class="input-group d-flex px-3">
                    <h4>@ViewBag.uname</h4>
                </div>
            </div>
        </div>
        <div class="row postDetails">
            @Model.Details
        </div>
        <div class="row justify-content-between mt-3">
            <span class="postLikes col" style="color:#87878A;"> @Model.Likes Apples  @Model.Dislikes Deaths</span>
            <p class="text-right col" style="color:#87878A;"> @Model.Date </p>
            <hr />
        </div>
        <div class="row justify-content-around">
            <div class="col-2">
                <a class="postControl" href="/Post/LikePost/?postId=@Model.PostId">
                    <img class="postIcon" src="~/Media/apple.png" alt="" />
                    <p>Give Apple</p>
                </a>
            </div>
            <div class="col-2">
                <a class="postControl" href="/Post/PostDetails/?postId=@Model.PostId">
                    <img class="postIcon" src="~/Media/comment.png" alt="" />
                    <p>Comment</p>
                </a>
            </div>
            <div class="col-2">
                <a class="postControl" href="/Post/DislikePost/?postId=@Model.PostId">
                    <img class="postIcon" src="~/Media/writename.png" alt="" />
                    <p>Write Name</p>
                </a>
            </div>
        </div>
    </div>
    <div class="row mt-5 py-4 px-2 postContent justify-content-around">
        <div class="col-1">
            <img class="smallImg" src="~/UsersMedia/ProfilePictures/@Session["UserImg"]" alt="Alternate Text" />
        </div>
        <div class="col-10 d-flex align-items-center">
            <div class="input-group d-flex">
                <input id="cmtDetails" value=" " placeholder="Find Someone..." class="darkInput col-10" />
                <button onclick="comment()" class="col-1" style="position:relative;width:20px;left:-80px;border:none;background:none;">
                    Comment
                </button>
            </div>
        </div>
    </div>
    <div class="row">
        @Html.Action("CommentSection")
    </div>

    <script>
        function comment() {
            var key = document.getElementById("cmtDetails");
            if (key.value != "") {
                window.location.href = "/Post/Comment/?cmt=" + key.value;
            }
        }
    </script>
</div>